@using Guessing_Game.Models
@model PersonToEditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Person</h1>

@if (User.Identity.IsAuthenticated)
{
    <form asp-action="Edit"  method="post">
    <div asp-validation-summary=All class="text-danger"></div>
    <div class="form-group">
        <label>Name</label>
        <input name="NewName" type="text" placeholder=@Model.Person.Name />
    </div>
    @*<span asp-validation-for=@Model.person class="text-danger"> </span>*@
    <div class="form-group">
        <label>Phone Number</label>
        <input  name="NewPhone" type="text" placeholder=@Model.Person.PhoneNumber  />
    </div>
    <div class="form-group">
        <input  name="PersonId" type="hidden" value=@Model.Person.PersonId  />
    </div>

    @*<span asp-validation-for="@Model.person" class="text-danger"></span>*@
    <div class="form-group">
        <label>Select City</label>
       <select name="CityName" class="form-control" asp-items="ViewBag.Cities" asp-for=@Model.CityName  ></select>
    </div>
    <div class="form-group">
        <label>Select Language</label>
       <select name="LanguageName" class="form-control" asp-items="ViewBag.Languages" asp-for=@Model.LanguageName  ></select>
    </div>
    <input type="submit" value="Save changes" class="btn btn-primary" />
    </form>
}



