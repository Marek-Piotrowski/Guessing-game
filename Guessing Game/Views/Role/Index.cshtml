@model IQueryable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>Roles</h1>



<a asp-action="Create">
    <button class="btn btn-primary">
        Create new role
    </button>
</a>

<br />
<br />

<a asp-action="AddUserToRole">
    <button class="btn btn-primary">
        Asign user a role
    </button>
</a>



<table class="table">
    <thead>
        <tr>
            <th> Id</th>
            <th> Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
            </tr>
        }
    </tbody>
</table>

